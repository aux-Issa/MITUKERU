<header class="text-center mt-3 container">
  <h1><%= @shop.company.name %> <%= @shop.name %></h1>
</header>

<section class="mt-3 container">
  <h2 class="fs-4"><%= @shop.catch_copy %></h2>
  <p><%= @shop.introduction %></p>
</section>

<section class="mt-3 container">
  <% if @shop.reviews.any? %>
    <div class="d-flex align-items-center">
      <h3 class="fs-5 fw-bold"><%= @shop.company.name %> <%= @shop.name %>で売却した人の不動産会社についての口コミ(平均評価★<%= @shop.reviews.average :response_satisfaction %> )</h3>
    </div>
    <ul class="mt-3">
      <%= render @reviews %>
    </ul>
  <% end %>
</section>

<%= render "shared/shop_info", has_logo: true %>

<div class="text-center mt-4 mb-5">
  <%= link_to assessment_requests_path(shop_id: @shop.id) do%>
    <button class="btn btn-secondary">査定依頼をする</button>
  <%end%>
</div>
